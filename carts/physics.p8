pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
function _init()
  mpp=12.58
  xm=805
  x=xm/mpp
  m=20
  -- f - m*a
  -- a = f/m
  f=10
  fm=1000
  v=0.0
  mph=v
end

function _update()
  -- update our forces
  -- update our velocities
  -- update our position
  if btn(⬅️) then
    v=v-(1/30)*(f/(m/fm))
  elseif btn(➡️) then
    v=v+(1/30)*(f/(m/fm))
  end
  mph=v*0.45
  xm=xm+v*(1/30)
  if xm > 1530 then
    xm = 1530
  elseif xm < 0 then
    xm = 1610
  end
  x=xm/mpp
  
end

function _draw()
  cls()
  print(mph,0,0)
  spr(1,x,64)
end
